<Defs>

  <HediffDef>
    <defName>PP_MindGraft1</defName>
    <label>mind graft</label>
	<hediffClass>HediffWithComps</hediffClass>
	<description>The mental capabilities of this pawn has been greatly enhanced by the addition of a psychic pawn's own mind.</description>
    <initialSeverity>1.0</initialSeverity>
	<maxSeverity>1.0</maxSeverity>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-6</severityPerDay>
      </li>
    </comps>
  	<defaultLabelColor>(0.09, 0.45, 0.15)</defaultLabelColor>      	
    <isBad>false</isBad>
    <stages>
      <li>
		<minSeverity>.001</minSeverity>
        <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>0.2</offset>
          </li>
		  <li>
            <capacity>Consciousness</capacity>
            <offset>0.2</offset>
          </li>
        </capMods>
		<statOffsets>
		  <MeleeDodgeChance>10</MeleeDodgeChance>
		  <AimingDelayFactor>-0.10</AimingDelayFactor>
		  <MentalBreakThreshold>-0.05</MentalBreakThreshold>
	    </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
