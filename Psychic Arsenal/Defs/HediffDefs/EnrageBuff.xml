<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>PP_Enrage</defName>
    <label>enrage</label>
	<hediffClass>HediffWithComps</hediffClass>
	<description>Something has flipped inside. Energy is welling up, and only an outlet is required to release it.</description>
    <initialSeverity>1.0</initialSeverity>
	<maxSeverity>1.0</maxSeverity>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-6</severityPerDay>
      </li>
    </comps>
  	<defaultLabelColor>(0.674, 0.066, 0.466)</defaultLabelColor>      	
    <isBad>false</isBad>
    <stages>
      <li>
		<minSeverity>.001</minSeverity>
        <restFallFactor>1.5</restFallFactor>
		<hungerRateFactor>1.5</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.35</offset>
          </li>
		  <li>
            <capacity>Consciousness</capacity>
            <offset>0.25</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>0.25</offset>
          </li>
        </capMods>
		<statOffsets>
		  <PainShockThreshold>0.25</PainShockThreshold>
		  <MeleeDodgeChance>15</MeleeDodgeChance>
	    </statOffsets>
      </li>
    </stages>
  </HediffDef>

</Defs>